border-colour = rgba(black, 0.3)
pad = 10px
size = 40px
decoded-yellow = #FCF700

.ui 
  display inline-block
  width 100%
  height 100px
  padding 9px 0 10px 0
  float left
  border-bottom 1px solid border-colour

  @media (min-width: 780px) 
    width 50%
    padding 9px 10px 10px 10px
    border-left 1px solid border-colour

  @media (min-width: 780px) and (max-width: 1200px)
    &:nth-child(2n)
      border-left none
      padding-left 0

    &:nth-child(2n+1)
      padding-right 0

  @media (min-width: 1200px) 
    width 33.333%

    &:nth-child(3n-1)
      border-left none
      padding-left 0

    &:nth-child(3n+1)
      padding-right 0

  .label
    font-size 22px
    margin 0

    @media (max-width: 420px)
      float left
      margin-bottom 7px