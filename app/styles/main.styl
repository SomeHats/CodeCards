@import 'nib'

.main

  nav
    position fixed
    width 100%
    bottom 0
    height 50px
    background-color black
    box-shadow 0 0px 8px rgba(0, 0, 0, 0.7)
    z-index 20

    // Hidden
    opacity 0
    transform translateY(70px)

    .logo
      display inline-block
      padding-top 4px
      padding-left 5px
      color #FCF700
      font-size 30px

    .pin-entry
      color #FCF700

      .remote
        display inline-block
        position absolute
        bottom 2px
        right 2px
        padding-top 2px
        cursor pointer
        transition all 0.4s ease
        transform translateX(70px)

      &.hide .remote
        transform translateX(0)

      div
        overflow hidden
        position fixed
        bottom 0px
        right 0px
        width 200px
        padding 10px
        background-color black
        z-index 10
        transition all 0.4s ease
        box-shadow 0 0px 8px rgba(0, 0, 0, 0.7)

      &.hide div
        transform translateY(250px)

      h3
        margin 0
        font-size 22px
        font-family 'Open Sans', sans-serif
        font-weight 300

      input
        width 100%
        border none
        outline none
        font-family 'Inconsolata'
        font-size 48px
        text-align center
        border-bottom 1px solid #FCF700
        background-color transparent
        color #FCF700

      button
        width 100%
        height 40px
        margin-top 10px
        border 1px solid rgba(252, 247, 0, 0.3)
        background-color transparent
        color #FCF700
        font-family 'Open Sans', sans-serif
        font-size 20px
        font-weight 300

      .status
        position absolute
        text-align right
        right 60px
        bottom 0px
        line-height 50px
        margin 0
        transition all 0.4s ease
        opacity 0

      &.hide .status
        opacity 1